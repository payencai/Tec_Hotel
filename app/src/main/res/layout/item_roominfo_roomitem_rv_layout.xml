<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="44dp"
    android:orientation="vertical"
    android:paddingLeft="8dp"
    android:paddingRight="8dp">

    <TextView
        android:id="@+id/roomNumber"
        style="@style/common_font"
        android:layout_height="match_parent"
        android:text="8021" />

    <TextView
        android:id="@+id/roomPrice"
        style="@style/common_font"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:paddingRight="24dp"
        android:text="¥350" />

    <LinearLayout
        android:id="@+id/openChangeStateLayout"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/roomState"
            style="@style/common_font"
            android:layout_height="match_parent"
            android:layout_marginRight="8dp"
            android:text="空闲" />

        <ImageView
            android:id="@+id/img"
            android:layout_width="6dp"
            android:layout_height="12dp"
            android:layout_gravity="center"
            android:layout_marginRight="2dp"
            android:src="@mipmap/hotel_left" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/rootStateChangeLayout"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:orientation="horizontal"
        android:visibility="gone">

        <ImageView
            android:id="@+id/img2"
            android:layout_width="6dp"
            android:layout_height="12dp"
            android:layout_gravity="center"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="15dp"
            android:src="@mipmap/hotel_right" />


        <ImageView
            android:id="@+id/hotel_room_state_edit"
            android:layout_width="@dimen/length_view_40dp"
            android:layout_height="@dimen/length_view_40dp"
            android:layout_gravity="center"
            android:paddingBottom="11dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:paddingTop="11dp"
            android:src="@mipmap/hotel_write_yellow" />

        <ImageView
            android:id="@+id/hotel_room_state_del"
            android:layout_width="@dimen/length_view_40dp"
            android:layout_height="@dimen/length_view_40dp"
            android:layout_gravity="center"
            android:paddingBottom="11dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:paddingTop="11dp"
            android:src="@mipmap/hotel_delete_yellow" />

    </LinearLayout>


</RelativeLayout>